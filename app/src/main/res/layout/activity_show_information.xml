<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.shivam.delluserapp.ShowInformationActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="PRODUCT INFORMATION"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_weight="1"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="horizontal"
    android:layout_marginLeft="5dp"
    android:layout_weight="1">
    <TextView
        android:layout_width="0dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="SERVICE TAG:"
        android:gravity="center_vertical"
        android:textColor="@android:color/black"
        android:layout_height="match_parent"
        android:layout_weight="1.7"/>
    <TextView
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/service_tag_show_info"
        android:gravity="center_vertical"
        android:textColor="@android:color/black"
        android:layout_width="0dp"
        android:layout_weight="2.5"
        android:layout_height="match_parent" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="0dp"
            android:textSize="20sp"
            android:text="MODEL No.:"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:layout_height="match_parent"
            android:layout_weight="1.7"/>
        <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/model_number_show_info"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="0dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Configuration:"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:layout_height="match_parent"
            android:layout_weight="1.7"/>
        <TextView
            android:textSize="14sp"
            android:id="@+id/configuration_show_info"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:layout_weight="2.5"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="0dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="STORE:"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:layout_height="match_parent"
            android:layout_weight="1.7"/>
        <TextView
            android:textSize="14sp"
            android:textStyle="bold"
            android:id="@+id/store_name_show_info"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            android:layout_width="0dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="BUNDLE CODE:"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:layout_height="match_parent"
            android:layout_weight="1.7"/>
        <TextView
            android:textSize="14sp"
            android:textStyle="bold"
            android:id="@+id/bundle_code_show_info"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            android:layout_width="0dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="MSA NAME:"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:layout_height="match_parent"
            android:layout_weight="1.7"/>
        <TextView
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:layout_width="0dp"
            android:id="@+id/msa_name_show_info"
            android:layout_weight="2.5"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            android:layout_width="0dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="DISPLAY:"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:layout_height="match_parent"
            android:layout_weight="1.7"/>
        <TextView
            android:textSize="14sp"
            android:textStyle="bold"
            android:id="@+id/display_show_info"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>
